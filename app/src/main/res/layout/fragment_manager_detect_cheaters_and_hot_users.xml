<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/fragment_manager_detect_cheaters_and_hot_users_detect_cheaters"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="detect cheater"/>
    <Button
        android:id="@+id/fragment_manager_detect_cheaters_and_hot_users_show_hot_users"
        app:layout_constraintTop_toBottomOf="@id/fragment_manager_detect_cheaters_and_hot_users_detect_cheaters"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show hot users"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_manager_detect_cheaters_and_hot_users_recyclerview"
        app:layout_constraintTop_toBottomOf="@id/fragment_manager_detect_cheaters_and_hot_users_show_hot_users"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="@dimen/layout_height_10dp"
    android:paddingStart="@dimen/layout_height_10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/post_activity_sender_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_height_10dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="sender"/>

    <TextView
        android:id="@+id/post_activity_post_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_height_20dp"
        app:layout_constraintTop_toBottomOf="@id/post_activity_sender_text_view"
        tools:text="Lorem ipsum dolor sit amet, sed eu copiosae atomorum. Mel te minim habemus efficiendi, ei pro assum option consulatu. Sint oportere no est, id has legere ceteros deserunt. Per ferri facer petentium no, idque commodo ne qui. Percipitur efficiendi consectetuer sit ne, errem quodsi omittantur ius ad. Mei ad denique insolens, ad velit impetus vis." />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/post_activity_hash_tag_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/post_activity_post_text_view"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/post_activity_like_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_height_10dp"
        android:src="@drawable/like_stork_gray_24dp"
        app:layout_constraintTop_toBottomOf="@id/post_activity_hash_tag_rv"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/post_activity_comment_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mode_comment_gray_24dp"
        app:layout_constraintTop_toTopOf="@id/post_activity_like_image_view"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/post_activity_like_count_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_height_10dp"
        app:layout_constraintTop_toTopOf="@id/post_activity_like_image_view"
        app:layout_constraintStart_toEndOf="@id/post_activity_like_image_view"/>
    <TextView
        android:id="@+id/post_activity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comments"
        android:layout_marginTop="@dimen/layout_height_20dp"
        app:layout_constraintTop_toBottomOf="@id/post_activity_like_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/post_activity_comment_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_height_10dp"
        app:layout_constraintTop_toBottomOf="@id/post_activity_label"/>

</android.support.constraint.ConstraintLayout>